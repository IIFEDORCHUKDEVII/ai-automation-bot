datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-id"
}

model Order {
  id        Int      @id @default(autoincrement())
  chatId    String   // ID користувача в Telegram
  items     String   // Список товарів (JSON рядок)
  status    String   @default("pending") // pending, completed, cancelled
  createdAt DateTime @default(now())
}

model InventoryLog {
  id        Int      @id @default(autoincrement())
  item      String   // Назва (вугілля, тютюн)
  amount    Float
  unit      String   // кг, шт
  createdAt DateTime @default(now())
}